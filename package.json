{
    "name": "beacon",
    "version": "0.1.0",
    "description": "A signals library for vanilla TypeScript",
    "repository": "markmals/beacon",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs"
        }
    },
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "unbuild",
        "dev": "vitest dev",
        "test": "vitest run",
        "prepack": "unbuild",
        "release": "npm run build && np"
    },
    "devDependencies": {
        "typescript": "latest",
        "unbuild": "latest",
        "vitest": "latest",
        "np": "latest",
        "prettier": "latest"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "np": {
        "yarn": false
    }
}
